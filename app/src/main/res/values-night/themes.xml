<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spacerace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spacerace_purple</item>
        <item name="colorPrimaryVariant">@color/spacerace_purple_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/martian_orange</item>
        <item name="colorSecondaryVariant">@color/martian_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/spacerace_purple</item>
        <item name="android:textColorHighlight">@color/spacerace_purple_light</item>
        <item name="popupMenuStyle">@style/popup_theme</item>
    </style>
    <!-- Margin for popup menu items -->
    <style name="popup_theme" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-32dp</item>
        <item name="android:dropDownVerticalOffset">2dp</item>
    </style>
</resources>